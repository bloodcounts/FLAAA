# SuperLink Configuration Example

# PDP (Policy Decision Point) Configuration
PDP_HOST=localhost
PDP_PORT=8080
PDP_PROTOCOL=http

# SuperLink API Addresses
FLEET_API_ADDRESS=0.0.0.0:9092
CONTROL_API_ADDRESS=0.0.0.0:9093
SERVERAPPIO_API_ADDRESS=0.0.0.0:9091

# Database
DATABASE_PATH=superlink.db

# SSL/TLS (optional - uncomment to enable)
# SSL_CERTFILE=/path/to/server.crt
# SSL_KEYFILE=/path/to/server.key
# SSL_CA_CERTFILE=/path/to/ca.crt

# SuperNode Authentication (optional)
# ENABLE_SUPERNODE_AUTH=true

# Isolation Mode
ISOLATION_MODE=subprocess
